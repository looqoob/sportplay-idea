<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.looqoob.sportplay.dao.MenuDao">
<!--    关系映射-->
    <resultMap id="menuMap" type="com.looqoob.sportplay.bean.MainMenu">
        <id column="id" property="id"></id>
        <result column="title" property="title"></result>
        <result column="path" property="path"></result>
        <result column="icon" property="icon"></result>
        <collection property="sList" ofType="com.looqoob.sportplay.bean.SubMenu">
            <id column="sid" property="id"></id>
            <result column="stitle" property="title"></result>
            <result column="spath" property="path"></result>
            <result column="sicon" property="icon"></result>
        </collection>
    </resultMap>
    <select id="getMenus" resultMap="menuMap">
        select mm.*,sm.id as sid,sm.title as stitle,sm.path as spath,sm.icon as sicon from
        mainmenu mm,submenu sm where mm.id = sm.mid;
    </select>
</mapper>